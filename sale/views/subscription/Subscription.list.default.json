{
    "name": "Subscriptions",
    "description": "Default listing of all subscriptions.",
    "controller": "sale_subscription_subscription-collect",
    "order": "date_from,date_to,name",
    "sort": "asc",
    "operations": {
        "total": {
            "price": {
                "id": "operations.total.price",
                "label": "Total price",
                "usage": "amount/money:2",
                "operation": "SUM"
            }
        }
    },
    "header": {
        "selection": {
            "default": false,
            "actions" : [
                {
                    "id": "action.bulk_expiration",
                    "label": "Update expiration columns",
                    "icon": "update",
                    "controller": "sale_subscription_bulk-expirations",
                    "confirm": true
                }
            ]
        },
        "actions": {
            "ACTION.CREATE": [
                {
                    "view": "form.create",
                    "description": "Overload form to use for subscription creation."
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "40%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "date_from",
                "width": "20%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "date_to",
                "width": "20%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "is_auto_renew",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_expired",
                "label": "Expired",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "has_upcoming_expiry",
                "label": "Upcoming expiry",
                "width": "20%",
                "sortable": true,
                "readonly": true
            },
            {
                "id": "item.customer",
                "type": "field",
                "value": "customer_id",
                "label": "Customer",
                "width": "33%"
            },
            {
                "type": "field",
                "value": "is_billable",
                "label": "Billable",
                "width": "15%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%",
                "sortable": true
            }
        ]
    }
}